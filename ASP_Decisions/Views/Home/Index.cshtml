@model  List<ASP_Decisions.Models.Decision>


<h3> The latest decisions </h3>

<div class="col-sm-9">

    @foreach (var dec in Model)
    {        
        <a href=@Url.Action("Details", "Decision", new { id = dec.Id })>     
            <div class="row well well-sm">
                <div class="col-sm-2">
                    @dec.CaseNumber
                </div>
                <div class="col-sm-1">
                    @dec.Board
                </div>
                <div class="col-sm-7">
                    @dec.Title
                </div>
            </div>
        </a>
    }
</div>


